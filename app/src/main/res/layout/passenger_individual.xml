<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:id="@+id/linearOfPassenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/deletePassenger"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toLeftOf="@id/expandableArrow5"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_delete_24" />

            <ImageView
                android:id="@+id/expandableArrow5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />

            <TextView
                android:id="@+id/nameOfPassenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="16dp"
                android:paddingRight="10dp"
                android:paddingBottom="16dp"
                android:text="Name/Surname"
                android:textColor="@color/dark_purple"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expandableRelativeOfPassenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/birthDateOfPassenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Birth Date"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/TCIdOfPassenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TC ID No/Passport No"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_below="@id/birthDateOfPassenger"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>