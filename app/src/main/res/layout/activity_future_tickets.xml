<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="@string/future_tickets"
    tools:context=".View.User.FutureTickets">

    <Button
        android:id="@+id/buttonAddNewTicket"
        android:layout_width="240dp"
        android:layout_height="67dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="85dp"
        android:background="@drawable/round_corners"
        android:backgroundTint="#009688"
        android:foregroundTint="#009688"
        android:hapticFeedbackEnabled="true"
        android:text="@string/add_new_ticket"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerFutureTickets"
        app:rippleColor="#009688"
        app:strokeColor="#009688" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFutureTickets"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>