<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:id="@+id/linearOfTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceOfTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/expandableArrow2"
                android:paddingTop="16dp"
                android:paddingRight="10dp"
                android:paddingBottom="16dp"
                android:text="Price"
                android:textColor="@color/dark_purple"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/expandableArrow2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />

            <TextView
                android:id="@+id/ownerOfTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="16dp"
                android:paddingRight="10dp"
                android:paddingBottom="16dp"
                android:text="Owner"
                android:textColor="@color/dark_purple"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expandableRelativeOfTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/addComment"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_insert_comment_24" />

            <ImageView
                android:id="@+id/cancelTicket"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_below="@id/dateText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_cancel_24" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fromText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From:"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/dateText"/>
            <TextView
                android:id="@+id/toText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To:"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/fromText"/>
            <TextView
                android:id="@+id/seatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compartment - Seat"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/toText"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>